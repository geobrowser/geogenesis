{
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useTemplate": "off",
        "noUnusedTemplateLiteral": "off",
        "useSingleVarDeclarator": "off"
      },
      "complexity": {
        "useOptionalChain": "off"
      },
      "suspicious": {
        "noDoubleEquals": "off",
        "noShadowRestrictedNames": "off",
        "noExplicitAny": "off"
      },
      "a11y": {
        "useValidAnchor": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "tab",
    "indentSize": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingComma": "es5"
    }
  },
  "files": {
    "ignore": [
      "./**/build/**/*",
      "./**/dist/**/*",
      "./**/.next/**/*",
      "./**/node_modules/**/*"
    ]
  }
}
