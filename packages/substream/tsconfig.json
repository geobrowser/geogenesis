{
  "compilerOptions": {
    /* Basic Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    /* Strictness Options */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Module resolution when transpiling with TypeScript */
    // "moduleResolution": "NodeNext",
    // "module": "NodeNext",
    // "outDir": "dist",
    // "sourceMap": true,

    /* 
      Module resolution when not transpiling with TypeScript.
      We're currently using esbuild so we use the following options.
    */
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,

    /* Lib when not targeting the browser */
    "lib": ["ES2022"],

    /* Lib when targeting the browser */
    // "lib": ["ES2022", "DOM", "DOM.Iterable"]

    /* When building a library */
    // "declaration": true,

    /* When building a library in a monorepo */
    // "composite": true,
    // "declarationMap": true,

    "types": ["vitest/globals"]
  },
  "include": [
    "index.ts",
    "sink/**/*",
    "schema.d.ts",
    "sink/bootstrap-root.ts",
    "sink/cursor.ts",
    "sink/entries/map-entries.ts",
    "sink/parse-valid-full-entries.ts",
    "sink/entries/populate-entries.ts",
    "sink/populate-from-cache.ts",
    "sink/populate-profiles.ts",
    "sink/populate-roles.ts",
    "sink/run-stream.ts",
    "sink/types.ts",
    "sink/zod.ts",
    "sink/zapatos",
    "sink/utils",
    "sink/substreams.js",
    "sink/constants"
  ]
}
