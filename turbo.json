{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["codegen", "^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**",
        "generated/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "codegen": {
      "dependsOn": ["^codegen"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "dev": {
      "dependsOn": ["build"],
      "outputs": [".next/**", "dist/**", "build/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },

    "@geogenesis/action-schema#build": {
      "dependsOn": ["codegen"]
    },
    "@geogenesis/contracts#build": {
      "dependsOn": ["@geogenesis/action-schema#build"],
      "outputs": ["dist/**", "build/**", "generated/**"]
    },
    "web": {
      "dependsOn": ["@geogenesis/contracts#build"]
    },
    "@geogenesis/subgraph#codegen": {
      "dependsOn": ["@geogenesis/contracts#build"]
    },
    "@geogenesis/subgraph#build": {
      "dependsOn": [
        "@geogenesis/subgraph#codegen",
        "@geogenesis/contracts#build"
      ]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint", "format"],
      "outputs": []
    }
  }
}
