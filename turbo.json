{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["codegen", "^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**",
        "generated/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "codegen": {
      "dependsOn": ["^codegen"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "dev": {
      "dependsOn": ["build"],
      "outputs": [".next/**", "dist/**", "build/**"],
      "persistent": true,
      "cache": false
    },
    "test": {
      "dependsOn": ["build"]
    },
    "@geogenesis/subgraph#build": {
      "dependsOn": ["codegen", "@geogenesis/contracts#build"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint", "format"],
      "outputs": []
    }
  }
}
