{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["codegen", "^build"],
      "outputs": [".next/**", "dist/**", "build/**", "generated/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "codegen": {
      "dependsOn": ["^codegen"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "dev": {
      "dependsOn": ["build"],
      "outputs": [".next/**", "dist/**", "build/**"],
      "persistent": true,
      "cache": false
    },
    "test": {
      "dependsOn": ["build"]
    },
    "@geogenesis/subgraph#build": {
      "dependsOn": [
        "@geogenesis/subgraph#codegen",
        "@geogenesis/contracts#build"
      ],
      "outputs": ["dist/**", "build/**", "generated/**"]
    },
    "web": {
      "dependsOn": [
        "@geogenesis/action-schema#build",
        "@geogenesis/contracts#build"
      ],
      "outputs": [".next/**"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint", "format"],
      "outputs": []
    }
  }
}
